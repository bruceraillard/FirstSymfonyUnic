{% extends 'base.html.twig' %}

{% block title %}Détails du Marque-Page{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center color_mauve">Details du marque page {{ bookmark.id }}</h1>
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover shadow-sm">
                <thead>
                <tr>
                    <th>Libellé</th>
                    <th>Valeur</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <th class="color_rose">id</th>
                        <td class="color_bleu">{{ bookmark.id }}</td>
                    </tr>
                    <tr>
                        <th class="color_rose">url</th>
                        <td class="color_bleu">{{ bookmark.url }}</td>
                    </tr>
                    <tr>
                        <th class="color_rose">Commentaire</th>
                        <td class="color_bleu">{{ bookmark.comment ?: 'Aucun commentaire' }}</td>
                    </tr>
                    <tr>
                        <th class="color_rose">Mots clés</th>
                        <td>
                            <ul class="list-inline">
                                {% for tag in bookmark.tags %}
                                    <li class="list-inline-item badge bg_bleu text-white p-2">{{ tag.name }}</li>
                                {% else %}
                                    <li class="text-muted">Aucun mot-clé</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>

                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('bookmark_list') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>

{% endblock %}
