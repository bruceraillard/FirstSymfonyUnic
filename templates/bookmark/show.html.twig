{% extends 'base.html.twig' %}

{% block title %}DÃ©tails du Marque-Page{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center color_mauve">{{ 'bookmark.show.title'|trans }} {{ bookmark.id }}</h1>
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover shadow-sm">
                <tbody>
                    <tr>
                        <th class="color_rose">id</th>
                        <td class="color_bleu">{{ bookmark.id }}</td>
                    </tr>
                    <tr>
                        <th class="color_rose">url</th>
                        <td class="color_bleu">{{ bookmark.url }}</td>
                    </tr>
                    <tr>
                        <th class="color_rose">{{ 'bookmark.show.table.comment'|trans }}</th>
                        <td class="color_bleu">{{ bookmark.comment ?: 'Aucun commentaire' }}</td>
                    </tr>
                    <tr>
                        <th class="color_rose">{{ 'bookmark.show.table.tags'|trans }}</th>
                        <td>
                            <ul class="list-inline">
                                {% for tag in bookmark.tags %}
                                    <li class="list-inline-item badge bg_bleu text-white p-2">{{ tag.name }}</li>
                                {% else %}
                                    <li class="text-muted">{{ 'bookmark.show.table.tags_empty'|trans }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>

                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('bookmark_list') }}" class="btn btn-secondary">{{ 'bookmark.show.button_back'|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}
