{% extends 'base.html.twig' %}

{% block title %}Détails de l'employé{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center color_mauve">Détails de l'employé {{ employee.id }}</h1>
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover shadow-sm">
                <thead>
                <tr>
                    <th>Libellé</th>
                    <th>Valeur</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th class="color_rose">ID</th>
                    <td class="color_bleu">{{ employee.id }}</td>
                </tr>
                <tr>
                    <th class="color_rose">Nom</th>
                    <td class="color_bleu">{{ employee.surname }}</td>
                </tr>
                <tr>
                    <th class="color_rose">Prénom</th>
                    <td class="color_bleu">{{ employee.firstname }}</td>
                </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('employee_list') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
