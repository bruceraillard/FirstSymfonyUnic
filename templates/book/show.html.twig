{% block body %}
    <div class="container mt-5">
        <h1 class="text-center color_mauve">{{ 'book.show.title'|trans }} {{ book.id }}</h1>
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover shadow-sm">
                <tbody>
                <tr>
                    <th class="color_rose">id</th>
                    <td class="color_bleu">{{ book.id }}</td>
                </tr>
                <tr>
                    <th class="color_rose">{{ 'book.show.table.title'|trans }}</th>
                    <td class="color_bleu">{{ book.title }}</td>
                </tr>
                <tr>
                    <th class="color_rose">{{ 'book.show.table.publication_date'|trans }}</th>
                    <td class="color_bleu">{{ book.publicationdate|date('d/m/Y') }}</td>
                </tr>
                <tr>
                    <th class="color_rose">{{ 'book.show.table.publishing_house'|trans }}</th>
                    <td class="color_bleu">{{ book.publishinghouse }}</td>
                </tr>
                <tr>
                    <th class="color_rose">{{ 'book.show.table.author'|trans }}</th>
                    <td class="color_bleu">{{ book.auteur.surname }} {{ book.auteur.firstname }}</td>
                </tr>

                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('book_list') }}" class="btn btn-secondary">{{ 'book.show.button_back'|trans }}</a>
            </div>
        </div>
    </div>

{% endblock %}
