{% extends 'base.html.twig' %}

{% block title %}Auteurs avec plusieurs livres{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center color_mauve">Auteurs ayant publié plusieurs livres</h1>

        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover shadow-sm">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom ({{ numberOfAuthors }})</th>
                    <th>Prénom</th>
                    <th>Date de naissance</th>
                    <th class="text-center" style="width: 60px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for author in authors %}
                    <tr>
                        <td class="color_bleu">{{ author.id }}</td>
                        <td class="color_bleu">{{ author.surname }}</td>
                        <td>{{ author.firstname }}</td>
                        <td>{{ author.birthdate ? author.birthdate|date('d/m/Y') : '-' }}</td>
                        <td class="d-flex justify-content-center">
                            <a href="{{ path('author_show', { id: author.id }) }}"
                               class="btn bg_rose text-white d-flex align-items-center justify-content-center"
                               title="Détails">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted p-3">
                            Aucun auteur avec plusieurs livres.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <a href="{{ path('author_list') }}" class="btn btn-secondary">
                Retour à la liste des auteurs
            </a>
        </div>
    </div>
{% endblock %}
